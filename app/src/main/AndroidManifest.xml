<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="eccomerce.com">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:replace="android:icon">
        android:theme="@style/AppTheme">
        <activity
            android:name="eccomerce.com.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eccomerce.com.MainActivity"
            android:label="Easy buy"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="eccomerce.com.SignupActivity"
            android:label="Sign Up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eccomerce.com.SignIN"
            android:label="Easy buy n sell"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name="eccomerce.com.Grocery"
            android:label="Select Item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eccomerce.com.Utensils"
            android:label="Previous Shopping Lists"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eccomerce.com.Events"
            android:label="@string/title_activity_events"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eccomerce.com.Details"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eccomerce.com.Cart"
            android:label="@string/title_activity_cart"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>